<?xml version="1.0" encoding="UTF-8"?>
<halevt:Configuration version="0.1" xmlns:halevt="http://www.environnement.ens.fr/perso/dumas/halevt.html">

    <halevt:Device match="hal.button.type = tablet_mode">
        <halevt:Property name="hal.button.state.value">
            <halevt:Action value="true" exec="/usr/lib/tuquito/tuquito-accel/accel.py &gt;&gt; ~/.xsession-errors 2&gt;&amp;1 &amp;" />
            <halevt:Action value="false" exec="ps ax | grep accel.py | grep -v grep | awk '{print (/^V/ ? $0 : $1)}' | xargs kill &gt;&gt; ~/.xsession-errors 2&gt;&amp;1; /usr/bin/rotate normal" />
        </halevt:Property>
    </halevt:Device>

</halevt:Configuration>
